                  if (
                      ((concentrationSettingData.min_credits_per_area <= areaDetails[areaName].totalCredits) &&
                      (areaDetails[areaName].totalCredits <= concentrationSettingData.max_credits_per_area)) &&
                      (areaCount <= areaCountLength)
                  ) {
                    
