    $('.bidding-trimester').each((index, biddingTrimester) =>{
        $(biddingTrimester).css('--bidding-trimester-active', $(biddingTrimester).innerHeight() + 'px');
    })

    $('.bidding-modal').on('click', '.bidding-trimester', function() {
      
      let acadSessionId = $(this).data('acad-session-id');
      let rowIndex  = 1;

      if (acadSessionId != 'All') {
        let selector = `tr[data-acad-session-id="${acadSessionId}"]`;
        let selectedRows = $('#bidding-trimester-select-table tbody').find(selector);
        $('#bidding-trimester-select-table tbody tr').hide();
        selectedRows.show();
        
        selectedRows.each(function () {
            $(this).find('.id-column').text(rowIndex++);
            applyOddRowStyles($(this), rowIndex)
        });
      }

      resetBiddingTrimester('bidding-trimester-selected');
      selectBiddingTrimester($(this), 'bidding-trimester-selected', 'bidding-trimester-active');

    });

    $('#course-filter').on('change', function() {

      let courseId =  $(this).val();
      let areaName = $('#area-filter').val();
      let acadSessionId = $('button.bidding-trimester-selected').data('acad-session-id');
      let rowIndex = 1;
      let trimesterSelectedCount = $('button.bidding-trimester-selected').length;
      $('#bidding-trimester-select-table tbody tr').removeClass('odd-row');

      if (trimesterSelectedCount == 3) {
        if (courseId === 'All' && areaName === 'All') {
            selectedRows = $(`#bidding-trimester-select-table tbody tr`);
        } else if (courseId === 'All') {
            selectedRows = $(`#bidding-trimester-select-table tbody`).find(`tr[data-area-name="${areaName}"]`);
        } else {
            selectedRows = $('#bidding-trimester-select-table tbody').find(`tr[data-course-id="${courseId}"]`);
        }
      } else {
        if (courseId === 'All' && areaName === 'All') {
            selectedRows = $(`#bidding-trimester-select-table tbody`).find(`tr[data-acad-session-id="${acadSessionId}"]`);
        } else if (courseId === 'All') {
