            selectedRows = $(`#bidding-trimester-select-table tbody`).find(`tr[data-acad-session-id="${acadSessionId}"]`);
        } else if (courseId === 'All') {
            selectedRows = $(`#bidding-trimester-select-table tbody`).find(`tr[data-area-name="${areaName}"][data-acad-session-id="${acadSessionId}"]`);
        } else {
            selectedRows = $(`#bidding-trimester-select-table tbody`).find(`tr[data-area-name="${areaName}"][data-course-id="${courseId}"][data-acad-session-id="${acadSessionId}"]`);
