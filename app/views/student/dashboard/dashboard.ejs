
<%- include('../partials/leftSidebarForStudent.ejs') %>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


  <div class="card card-custom">
    <div class="card-header-custom d-flex justify-content-between p-1">
        <h3 class="ms-2"> Student Time</h3>
    </div>
    <div class="card-body table-responsive">
        <div class="row">
            <div class="col-md-4">
                <h4>Max Trimester Credits :</h4>
            </div>
            <div class="col-md-4 d-flex">
                <p class="fw-bold">Max Yearly Credits :</p>&nbsp;<%- maxYearlyCredits %>
            </div>
            <div class="col-md-4">
                <h4>Confirmed Credits : </h4>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 d-flex">
                <p class="fw-bold">Bidding Name : </p>&nbsp;<%- locals.biddingName.toLowerCase().split(' ').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
            </div>
            <div class="col-md-4 d-flex">
                <p class="fw-bold">Total Bid Points :</p>&nbsp;<%- bidPoints[0].bid_points %>
            </div>
            <div class="col-md-4">
               <h4>Remaining Bid Points :</h4>
            </div>  
        </div>  
    </div>
  </div>  

  <div class="card card-custom mt-5">
    <div class="card-header-custom d-flex justify-content-between p-1">
        <h3 class="ms-2"> MBA Concentration</h3>
    </div>
    <div class="card-body table-responsive">
        <div class="row w-75 m-auto d-flex">
            <% for(let concentration of concentrationList){ %>
                <div class="col-md-4 d-flex align-items-center">
                    <input type="radio" name="concentration-name" data-value="<%- concentration.id %>">
                    <p class="fw-bold mb-0 ms-2"><%- concentration.concentration_name %></p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<div class="mt-5 d-flex justify-content-between">
    <div class="card card-custom col-md-5 ms-5">
        <div class="card-header-custom d-flex justify-content-between p-1">
            <h3 class="ms-2"> Confirmed Courses</h3>
        </div>
        <div class="card-body table-responsive">
            <div class="row m-auto d-flex">
               <h3>There are no Confirmed courses</h3>
            </div>
        </div>
    </div>

    <div class="card card-custom col-md-5 me-5">
        <div class="card-header-custom d-flex justify-content-between p-1">
            <h3 class="ms-2"> Dropped Courses</h3>
        </div>
        <div class="card-body table-responsive">
          <h3>There are no Dropped Courses</h3>
        </div>
    </div>
</div>
<div class="mt-5 d-flex justify-content-between">
    <div class="card card-custom col-md-5 ms-5">
        <div class="card-header-custom d-flex justify-content-between p-1">
            <h3 class="ms-2">Waitlist Courses</h3>
        </div>
        <div class="card-body table-responsive">
            <h3>There are no Waitlist Courses</h3>
        </div>
    </div>

    <div class="card card-custom col-md-5 me-5">
        <div class="card-header-custom d-flex justify-content-between p-1">
            <h3 class="ms-2">Winning Courses</h3>
        </div>
        <div class="card-body table-responsive">
          <h3>There are not Winning Courses
          </h3>
        </div>
    </div>
</div>



    
    
   





