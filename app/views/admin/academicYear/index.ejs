   <div class="modal" data-bs-backdrop="static" data-bs-keyboard="false" id="set_cycle_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title">Set Cycle Information</h5>
                <button class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="my-3">
                    <label for="product" class="form-label">Product :</label>
                    <input type="text" class="form-control" id="product" name="product" value="CBS" disabled>
                </div>
                <div class="my-3">
